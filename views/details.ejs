<!doctype html>
<html>
  <head>
    <title>Movie Details Page</title>
    <link rel="stylesheet" href="/style.css"></link>
  </head>
  <body>
    <form method="POST" action="/watchlater">
      <input type="hidden" name="id" value="<%=movieDetails.imdbID%>">
      <input type="hidden" name="title" value="<%=movieDetails.Title%>">
      <input type="submit" value="Watch Later">
    </form>
    <ul>
      <% for (var key in movieDetails) { %>
      <li>
        <span class="key"><%= key %></span>:
        <span class="val"><%= movieDetails[key] %></span>
      </li>
      <% } %>
    </ul>
    <% if ("Poster" in movieDetails && movieDetails.Poster !== "N/A") { %>
    <img src="<%=movieDetails.Poster%>">
    <% } %>
  </body>
</html>
